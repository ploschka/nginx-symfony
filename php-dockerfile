FROM php:8.0.26RC1-fpm-alpine3.16

WORKDIR /app

RUN docker-php-ext-install pdo_mysql pdo_pgsql mbstring zip exif pcntl curl tokenizer ctype xml dom xmlwriter session simplexml
RUN apk add composer

EXPOSE 9000
CMD /bin/sh -c "composer update && composer symfony:dump-env prod"
ENTRYPOINT [ "php-fpm" ]
