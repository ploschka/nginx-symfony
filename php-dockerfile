FROM php:8.0.26RC1-fpm-alpine3.16

WORKDIR /app

RUN apk update
RUN apk add oniguruma
RUN docker-php-ext-install  pdo_mysql zip exif pcntl curl tokenizer ctype xml dom xmlwriter session
RUN apk add php8-mbstring
RUN apk add php8-simplexml
RUN apk add composer

EXPOSE 9000
CMD /bin/sh -c "composer update && composer symfony:dump-env prod"
ENTRYPOINT [ "php-fpm" ]
